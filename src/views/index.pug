extends layout
block content
  .pure-g
    each card in cards
      .pure-u-1-3
        .box
          a(href=`/${card.entityId}/${card.state}` class='box-text')
            div(class=displayCheck(card, loading)) 
              h4= card.title
              p= card.type
            if card.entityId === loading
              script.
                  setTimeout(function () {
                    window.location = window.location.href.split("?")[0];
                  }, 500);
  script.
    setTimeout(function () {
      window.location = window.location.href.split("?")[0];
    }, #{interval});
